<server
    xmlns="https://trueupdate.java.net/xml/ns/config"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="https://trueupdate.java.net/xml/ns/config
                        https://trueupdate.java.net/xml/ns/config/server-1.0.xsd"
    version="1.0">
    <repositories>
        <!-- Configures the mandatory local repository. -->
        <local>
            <directory>${user.home}/.m2/repository</directory>
            <!-- The optional type. -->
            <type/>
        </local>
        <!--
          - Configures an optional remote repository.
          - Specify one element per repository.
          -->
        <remote>
            <!-- The optional ID. -->
            <id>central</id>
            <!-- The optional type. -->
            <type>default</type>
            <url>http://repo1.maven.org/maven2/</url>
        </remote>
    </repositories>
</server>
