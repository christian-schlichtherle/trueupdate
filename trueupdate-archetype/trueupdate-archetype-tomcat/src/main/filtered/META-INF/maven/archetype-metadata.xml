<archetype-descriptor name="autoupdate"
                      xmlns="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.0.0"
                      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                      xsi:schemaLocation="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.0.0 http://maven.apache.org/xsd/archetype-descriptor-1.0.0.xsd">
    <requiredProperties>
        <requiredProperty key="trueupdate-version">
            <defaultValue>${project.version}</defaultValue>
        </requiredProperty>
        <requiredProperty key="agent-subscriptionTimer-delay">
            <defaultValue>0</defaultValue>
        </requiredProperty>
        <requiredProperty key="manager-updateTimer-period">
            <defaultValue>720</defaultValue>
        </requiredProperty>
        <requiredProperty key="server-repositories-local-directory">
            <defaultValue>${user.home}/.m2/repository</defaultValue>
        </requiredProperty>
        <requiredProperty key="javase-version">
            <defaultValue>6</defaultValue>
        </requiredProperty>
        <requiredProperty key="javaee-version">
            <defaultValue>6</defaultValue>
        </requiredProperty>
    </requiredProperties>
    <modules>
        <module id="${rootArtifactId}-agent" dir="autoupdate-agent" name="${rootArtifactId}-agent">
            <fileSets>
                <fileSet filtered="true" packaged="true" encoding="UTF-8">
                    <directory>src/main/java</directory>
                </fileSet>
            </fileSets>
        </module>
        <module id="${rootArtifactId}-demo" dir="autoupdate-demo" name="${rootArtifactId}-demo">
            <fileSets>
                <fileSet filtered="true" encoding="UTF-8">
                    <directory>src/main</directory>
                </fileSet>
            </fileSets>
        </module>
        <module id="${rootArtifactId}-manager" dir="autoupdate-manager" name="${rootArtifactId}-manager">
            <fileSets>
                <fileSet filtered="true" encoding="UTF-8">
                    <directory>src/main</directory>
                </fileSet>
            </fileSets>
        </module>
        <module id="${rootArtifactId}-server" dir="autoupdate-server" name="${rootArtifactId}-server">
            <fileSets>
                <fileSet filtered="true" encoding="UTF-8">
                    <directory>src/main</directory>
                </fileSet>
            </fileSets>
        </module>
    </modules>
</archetype-descriptor>
