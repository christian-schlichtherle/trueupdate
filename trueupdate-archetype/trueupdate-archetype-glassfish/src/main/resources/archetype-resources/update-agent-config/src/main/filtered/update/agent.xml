#set( $symbol_pound = '#' )
#set( $symbol_dollar = '$' )
#set( $symbol_escape = '\' )
<?xml version="1.0" encoding="UTF-8"?>
<agent
    xmlns="https://trueupdate.java.net/xml/ns/config"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="https://trueupdate.java.net/xml/ns/config
                        https://trueupdate.java.net/xml/ns/config-1.0.xsd"
       version="1.0">
    <application>
        <artifact>
            <groupId>${symbol_dollar}{project.groupId}</groupId>
            <artifactId>${application}</artifactId>
            <version>${symbol_dollar}{project.version}</version>
            <extension>ear</extension>
        </artifact>
        <location>ear://${symbol_dollar}{basedir}/../application/target/${application}-${project.version}.ear?context.container.id=glassfish4x&amp;cargo.glassfish.admin.port=4848&amp;cargo.remote.username=admin&amp;cargo.remote.password=</location>
        <listenerClass>${package}.ApplicationListener</listenerClass>
    </application>
    <subscriptionTimer>
        <delay>${symbol_dollar}{agent.subscriptionTimer.delay.seconds}</delay>
        <unit>seconds</unit>
    </subscriptionTimer>
    <messaging>
        <connectionFactory>${parentArtifactId}/connection-factory</connectionFactory>
        <from>${parentArtifactId}/agent</from>
        <to>${parentArtifactId}/manager</to>
    </messaging>
</agent>
