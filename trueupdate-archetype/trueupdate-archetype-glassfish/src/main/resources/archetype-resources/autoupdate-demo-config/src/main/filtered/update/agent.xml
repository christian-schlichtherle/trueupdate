#set( $symbol_pound = '#' )
#set( $symbol_dollar = '$' )
#set( $symbol_escape = '\' )
<?xml version="1.0" encoding="UTF-8"?>
<agent xmlns="https://trueupdate.java.net/xml/ns/config"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="https://trueupdate.java.net/xml/ns/config
                           https://trueupdate.java.net/xml/ns/config-1.0.xsd"
       version="1.0">
    <application>
        <artifact>
            <groupId>${symbol_dollar}{project.groupId}</groupId>
            <artifactId>${symbol_dollar}{project.artifactId}</artifactId>
            <version>${symbol_dollar}{project.version}</version>
            <extension>${symbol_dollar}{project.packaging}</extension>
        </artifact>
        <location>/${parentArtifactId}-demo</location>
        <listenerClass>${package}.demo.ApplicationListener</listenerClass>
    </application>
    <subscriptionTimer>
        <delay>${symbol_dollar}{agent.subscriptionTimer.delay}</delay>
        <unit>seconds</unit>
    </subscriptionTimer>
    <messaging>
        <connectionFactory>${parentArtifactId}/connection-factory</connectionFactory>
        <from>${parentArtifactId}/agent</from>
        <to>${parentArtifactId}/manager</to>
    </messaging>
</agent>
