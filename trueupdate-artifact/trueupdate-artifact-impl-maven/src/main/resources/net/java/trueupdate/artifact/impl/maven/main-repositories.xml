<!--
  - Configures the mandatory local Maven repository plus some optional remote
  - Maven repositories.
  - Note that any reference of the form ${key} in the value of an element
  - gets substituted with the value of the system property with the specified
  - key.
  - E.g. ${user.home} gets replaced with the path of the current user's home
  - directory.
  -->
<repositories>
    <!-- Configures the mandatory local repository. -->
    <local>
        <basedir>${user.home}/.m2/repository</basedir>
        <!-- The optional type. -->
        <type/>
    </local>
    <!--
      - Configures an optional remote repository.
      - Specify one element per repository.
      -->
    <remote>
        <!-- The optional ID. -->
        <id>central</id>
        <!-- The optional type. -->
        <type>default</type>
        <url>http://repo1.maven.org/maven2/</url>
    </remote>
</repositories>
