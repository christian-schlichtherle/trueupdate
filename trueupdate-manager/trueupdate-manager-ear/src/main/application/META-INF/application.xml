<application xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/application_6.xsd" version="6">
    <application-name>${project.artifactId}</application-name>
    <description>${project.description}</description>
    <display-name>${project.name}</display-name>
    <module>
        <ejb>trueupdate-installer-tomcat-${project.version}.jar</ejb>
    </module>
    <module>
        <ejb>trueupdate-manager-ejb-${project.version}.jar</ejb>
    </module>
    <library-directory>lib</library-directory>
    <env-entry>
        <description>
            The base URL of the TrueUpdate server, ending with a slash forward
            character.

            If the string contains references of the form {@code ${key}}, then
            they get replaced with the value of the system property with the
            specified key.
            E.g. "http://localhost/${user.name}/trueupdate-server/".

            The default value is "http://localhost:8080/trueupdate-server/".
        </description>
        <env-entry-name>trueupdate.server.url</env-entry-name>
        <env-entry-type>java.lang.String</env-entry-type>
        <env-entry-value>http://localhost:8080/trueupdate-server/</env-entry-value>
    </env-entry>
</application>
