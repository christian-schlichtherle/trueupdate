<ejb-jar xmlns = "http://java.sun.com/xml/ns/javaee"
         xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation = "http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/ejb-jar_3_1.xsd"
         version = "3.1">
    <module-name>${project.artifactId}</module-name>
    <description>${project.description}</description>
    <display-name>${project.name}</display-name>
    <enterprise-beans>
        <session>
            <ejb-name>UpdateManagerBean</ejb-name>
            <env-entry>
                <description>
                    The base URI of the TrueUpdate Server application, ending
                    with a slash forward character.

                    If the string contains references of the form
                    \${key}, then they get replaced with the value of
                    the system property with the specified key.
                    E.g. "http://localhost/\${user.name}/trueupdate-server/".
                </description>
                <env-entry-name>updateServiceBaseUri</env-entry-name>
                <env-entry-value>http://localhost:8080/trueupdate-server/</env-entry-value>
            </env-entry>
            <env-entry>
                <description>
                    The interval for checking for artifact updates in minutes.
                </description>
                <env-entry-name>checkUpdatesIntervalMinutes</env-entry-name>
                <env-entry-value>360</env-entry-value>
            </env-entry>
            <resource-env-ref>
                <resource-env-ref-name>destination</resource-env-ref-name>
                <resource-env-ref-type>javax.jms.Queue</resource-env-ref-type>
                <mapped-name>jms/TrueUpdate Agent</mapped-name>
            </resource-env-ref>
        </session>
    </enterprise-beans>
</ejb-jar>
