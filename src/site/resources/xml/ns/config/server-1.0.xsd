<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           xmlns:tns="https://trueupdate.java.net/xml/ns/config"
           elementFormDefault="qualified"
           targetNamespace="https://trueupdate.java.net/xml/ns/config"
           version="1.0">

  <xs:element name="server" type="tns:MavenUpdateServerParameters"/>

  <xs:complexType name="MavenUpdateServerParameters">
    <xs:sequence>
      <xs:element name="repositories" type="tns:MavenParameters"/>
    </xs:sequence>
    <xs:attribute name="version" type="xs:string" use="required"/>
  </xs:complexType>

  <xs:complexType name="MavenParameters">
    <xs:sequence>
      <xs:element name="local" type="tns:LocalRepository"/>
      <xs:element maxOccurs="unbounded" minOccurs="0" name="remote" type="tns:RemoteRepository"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="LocalRepository">
    <xs:all>
      <xs:element minOccurs="0" name="type" type="xs:string"/>
      <xs:element name="basedir" type="xs:string"/>
    </xs:all>
  </xs:complexType>

  <xs:complexType name="RemoteRepository">
    <xs:all>
      <xs:element minOccurs="0" name="url" type="xs:string"/>
      <xs:element minOccurs="0" name="type" type="xs:string"/>
      <xs:element minOccurs="0" name="id" type="xs:string"/>
    </xs:all>
  </xs:complexType>
</xs:schema>
